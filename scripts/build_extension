#!/usr/bin/bash
set -euo pipefail

package_name="amazon_url_shortener-0-3-0"
directory_name="output/${package_name}"

rm -rf "${directory_name}"
mkdir -p "${directory_name}"

cp -r \
  images/icon*.png \
  js \
  manifest.json \
  "${directory_name}"

zip -r "${directory_name}.zip" "${directory_name}"
